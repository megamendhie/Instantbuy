<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendhie.instantbuy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_instantbuy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instantbuy">
        <activity
            android:name=".presentation.activities.CategoryActivity"
            android:theme="@style/Theme.Instantbuy.NoActionBar"
            android:exported="true" />
        <activity
            android:name=".presentation.activities.LandingActivity"
            android:exported="true"
            android:theme="@style/Theme.Instantbuy.NoActionBar" />
        <activity
            android:name=".presentation.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.activities.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.activities.ProductActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.activities.SignupActivity"
            android:exported="true"
            android:theme="@style/Theme.Instantbuy.NoActionBar" />
        <activity
            android:name=".presentation.activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.Instantbuy.NoActionBar" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Instantbuy.NoActionBar" />
    </application>

</manifest>