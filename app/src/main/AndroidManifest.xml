<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mendhie.instantbuy">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_instantbuy"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Instantbuy">
        <activity
            android:name=".presentation.views.LandingActivity"
            android:theme="@style/Theme.Instantbuy.NoActionBar"
            android:exported="true" />
        <activity
            android:name=".presentation.views.SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.views.ProductDetailActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.views.ProductActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.views.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.views.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.views.MainActivity"
            android:exported="true" />
    </application>

</manifest>